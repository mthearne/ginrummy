{
  "version": 2,
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "apps/api/src/server.ts",
      "use": "@vercel/node"
    }
  ],
  "installCommand": "corepack enable && pnpm install",
  "buildCommand": "pnpm --filter api db:generate && pnpm --filter common build && pnpm --filter web build",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/api/src/server.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}