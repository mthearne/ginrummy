{
  "version": 2,
  "installCommand": "corepack enable && pnpm install",
  "buildCommand": "pnpm --filter api db:generate && pnpm run build",
  "outputDirectory": "apps/web/dist",
  "builds": [
    {
      "src": "apps/api/src/server.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/api/src/server.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}